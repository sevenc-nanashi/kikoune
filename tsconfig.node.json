{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["es2021", "ESNext"],
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist-backend",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src-backend/*"],
      "~shared/*": ["./src-shared/*"]
    }
  },
  "include": [
    "vite.config.ts",
    "src-backend/**/*.ts",
    "src-backend/*.ts",
    "src-shared/**/*.ts",
    "src-shared/*.ts"
  ]
}
