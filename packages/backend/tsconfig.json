{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "types": ["node"],
    "noEmit": true,
    "allowImportingTsExtensions":  true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "extends": "@kikoune/shared/tsconfig.base.json",
  "include": ["src/*.ts", "build.ts"]
}
